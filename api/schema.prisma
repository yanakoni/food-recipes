datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id      Int      @id @default(autoincrement())
  email   String   @unique
  username    String
  password   String
}

model Receipt{ 
    id      Int      @id @default(autoincrement())
    name    String   @unique
    recipe_source    String?
    instructions    String?
    youtube_link    String?
    meal_thumb    String?
    category    String[]
    area    String?
    tags    String[]
    ingedients IngredientMeasure[] /// карт
}

model IngredientMeasure {
    id      Int      @id @default(autoincrement())
    ingredient Ingredient
    measure    String
    receipt    Receipt    @relation(fields: [receiptId], references: [id])
    receiptId  Int
}

model Ingredient {
    id      Int      @id @default(autoincrement())
    name    String   
}

model IngredientUser {
    id      Int      @id @default(autoincrement())
    ingredient Ingredient 
    measure    String
    user   User @relation(fields: [userId], references: [id])
    userId Int
}